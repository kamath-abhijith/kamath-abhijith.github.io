<div class="cv-info-grid">
  {% for content in entry.contents %}
    <div class="cv-info-item">
      <div class="cv-info-label">
        <i class="cv-info-icon fas fa-tag"></i>
        <strong>{{ content.name }}</strong>
      </div>
      
      {% if content.value %}
        <div class="cv-info-value">{{ content.value }}</div>
      {% endif %}
      
      {% if content.links %}
        <div class="cv-info-links">
          {% for item in content.links %}
            {% if item.link %}
              <a href="{{ item.link }}" target="_blank" class="cv-link-button">
                <i class="fas fa-external-link-alt"></i>
                {% if item.name %}{{ item.name }}{% else %}Document{% endif %}
              </a>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  {% endfor %}
</div>
