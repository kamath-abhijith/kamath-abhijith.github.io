<div class="teaching">
  <div class="container-md">
    {%- assign courses = site.data.teaching -%}
    {%- assign institutions = courses | group_by: 'institution' -%}
    
    {% for institution_group in institutions %}
      {% if institution_group.name == "NITK" %}
        <h2 class="institution-header mb-4" style="color: black; font-size: 1.35rem;"><i class="fas fa-university me-2"></i> Courses at NITK</h2>
      {% elsif institution_group.name == "IISc" %}
        <h2 class="institution-header mb-4" style="color: black; font-size: 1.35rem;"><i class="fas fa-university me-2"></i> Courses at IISc</h2>
      {% else %}
        <h2 class="institution-header mb-4" style="color: black; font-size: 1.35rem;"><i class="fas fa-graduation-cap me-2"></i> Other Courses</h2>
      {% endif %}
      
      <div class="courses-grid mb-5">
        {%- for course in institution_group.items -%}
        {% if course.permalink %}
        <a href="{{ course.permalink }}" class="course-link">
        {% endif %}
        <div class="course-card{% if course.permalink %} clickable{% endif %}">
          <div class="course-header">
            <div class="course-code">
              {% assign code_parts = course.title | split: ' ' %}
              <span class="code">{{ code_parts[0] }}</span>
            </div>
            {% if course.permalink %}
            <div class="course-link-icon">
              <i class="fas fa-external-link-alt"></i>
            </div>
            {% endif %}
          </div>
          <div class="course-content">
            <h5 class="course-title mb-2">{{ course.title | remove: code_parts[0] | strip }}</h5>
            <p class="course-description mb-2">{{ course.description }}</p>
            {% if course.instructor %}
              <small class="text-muted d-block">Instructor: {{ course.instructor }}</small>
            {% endif %}
            {% if course.teaching_assistants and course.teaching_assistants.size > 0 %}
              <small class="text-muted d-block">TAs: 
                {% for ta in course.teaching_assistants %}
                  {{ ta }}{% unless forloop.last %}, {% endunless %}
                {% endfor %}
              </small>
            {% endif %}
          </div>
          {% if course.semester %}
          <div class="course-semester">
            <small class="semester-badge">{{ course.semester }}</small>
          </div>
          {% endif %}
        </div>
        {% if course.permalink %}
        </a>
        {% endif %}
        {%- endfor -%}
      </div>
    {% endfor %}
  </div>
</div>

<style>
.teaching {
  margin-top: 2rem;
}

.institution-header {
  color: var(--global-theme-color);
  border-bottom: 2px solid var(--global-theme-color);
  padding-bottom: 0.5rem;
  margin-bottom: 2rem !important;
  font-weight: 600;
}

.courses-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 1.5rem;
  margin-bottom: 3rem;
}

.course-card {
  display: flex;
  flex-direction: column;
  background-color: var(--global-card-bg-color);
  border: 1px solid var(--global-divider-color);
  padding: 1.5rem;
  border-radius: 12px;
  height: 100%;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 1rem;
}

.course-code {
  background: linear-gradient(135deg, #d3d3d3, #a9a9a9);
  color: #333333;
  padding: 0.4rem 0.8rem;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 600;
  min-width: fit-content;
}

.course-link-icon {
  color: var(--global-text-color-light);
  opacity: 0.7;
  transition: opacity 0.2s ease;
}

.course-content {
  flex-grow: 1;
}

.course-title {
  color: var(--global-text-color);
  font-weight: 600;
  line-height: 1.3;
  margin-bottom: 0.75rem !important;
}

.course-description {
  color: var(--global-text-color-light);
  font-size: 0.95rem;
  line-height: 1.5;
  margin-bottom: 1rem !important;
}

.course-semester {
  margin-top: auto;
  padding-top: 1rem;
  border-top: 1px solid var(--global-divider-color);
}

.semester-badge {
  background-color: var(--global-bg-color);
  color: var(--global-text-color);
  padding: 0.3rem 0.8rem;
  border-radius: 15px;
  border: 1px solid var(--global-divider-color);
  font-weight: 500;
  font-size: 0.8rem;
}

/* Clickable card styling */
.course-link {
  text-decoration: none;
  color: inherit;
  display: block;
}

.course-link:hover {
  text-decoration: none;
  color: inherit;
}

.course-card.clickable {
  cursor: pointer;
}

.course-card.clickable:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  border-color: var(--global-theme-color);
}

.course-card.clickable:hover .course-link-icon {
  opacity: 1;
  color: var(--global-theme-color);
}

.course-card.clickable:hover .course-title {
  color: var(--global-theme-color);
}

/* Add a subtle accent line */
.course-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, var(--global-theme-color), #667eea);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.course-card.clickable:hover::before {
  opacity: 1;
}

/* Responsive design */
@media (max-width: 768px) {
  .courses-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .course-card {
    padding: 1.25rem;
  }
  
  .institution-header {
    font-size: 1.5rem;
  }
}

/* Dark mode compatibility */
html[data-theme="dark"] .course-card {
  background-color: var(--global-card-bg-color);
  border-color: var(--global-divider-color);
}

html[data-theme="dark"] .semester-badge {
  background-color: var(--global-card-bg-color);
  border-color: var(--global-divider-color);
}

html[data-theme="dark"] .course-card.clickable:hover {
  box-shadow: 0 8px 25px rgba(255,255,255,0.1);
}
</style>

